<div id="<%= dom_id @jornalentry %>">
  <h1 class="font-bold text-4xl text-teal-800">Journalentry</h1>
  <p class="my-5 flex justify-between items-center">
    <strong class="block font-medium mb-1">Date:</strong>
    <%= @jornalentry.date %>
  </p>

  <p class="my-5 flex justify-between items-center">
    <strong class="block font-medium mb-1">Tested at:</strong>
    <%= @jornalentry.tested_at.strftime('%H:%M') %>
  </p>

  <p class="my-5 flex justify-between items-center">
    <strong class="block font-medium mb-1">List of Food:</strong>
    <%= @jornalentry.list_of_food %>
  </p>

  <p class="my-5 flex justify-between items-center">
    <strong class="block font-medium mb-1">Glucose, mg/dL:</strong>
    <%= @jornalentry.glucose_mg_dl %>
  </p>

  <p class="my-5 flex justify-between items-center">
    <strong class="block font-medium mb-1">Glucose, mmol/L:</strong>
    <%= (@jornalentry.glucose_mg_dl / 18.0).round(2) %>
  </p>

  <p class="my-5 flex justify-between items-center">
    <strong class="block font-medium mb-1">Note:</strong>
    <%= @jornalentry.notes %>
  </p>
</div>
