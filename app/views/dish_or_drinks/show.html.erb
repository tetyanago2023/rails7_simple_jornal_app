<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl text-teal-800">Dish or Drink</h1>
      <%= link_to "New dish or drink", new_dish_or_drink_path, class: "rounded-lg py-3 px-5 bg-teal-800 text-amber-400 block text-sm font-medium hover:bg-teal-600" %>
    </div>

    <%= render @dish_or_drink %>

    <%= link_to "Edit this dish_or_drink", edit_dish_or_drink_path(@dish_or_drink), class: "mt-2 rounded-lg py-3 px-5 bg-teal-800 text-amber-400 hover:bg-teal-600 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this dish_or_drink", dish_or_drink_path(@dish_or_drink), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-teal-800 text-amber-400 hover:bg-teal-600 font-medium" %>
    </div>
    <%= link_to "Back to dish_or_drinks", dish_or_drinks_path, class: "ml-2 rounded-lg py-3 px-5 bg-teal-800 text-amber-400 hover:bg-teal-600 inline-block font-medium" %>
  </div>
</div>
