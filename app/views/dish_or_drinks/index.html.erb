<div class="mx-auto md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl text-teal-800">Dishes or drinks</h1>
    <%= link_to "New dish or drink", new_dish_or_drink_path, class: "rounded-lg py-3 px-5 bg-teal-800 text-amber-400 block text-sm font-medium hover:bg-teal-600" %>
  </div>
  <%= will_paginate @dish_or_drinks, class: "text-teal-800 font-bold"%>
  <div id="dish_or_drinks" class="min-w-full">
    <%= render @dish_or_drinks %>
  </div>
  <%= will_paginate @dish_or_drinks, class: "text-teal-800 font-bold"%>
</div>
